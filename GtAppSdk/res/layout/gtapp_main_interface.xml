<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/gtapp_topbar"
        android:gravity="center" >

        <!-- android:background="@drawable/gtapp_top_bar_repeat_bg -->

        <include
            android:id="@+id/ll_status_bar"
            layout="@layout/gtapp_status_bar" />
        <!-- android:layout_centerVertical="true" -->


        <!-- 状态区 -->

        <Button
            android:id="@+id/btn_dlg_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/gtapp_btn_close" />

        <!-- 按钮悬浮在跑马灯上面 -->

    </RelativeLayout>

    <!-- <View style="@style/gtapp_horizon_dividing_line" /> -->
    <!-- 在图片预加载时，先不显示 -->

    <include
        android:id="@+id/rl_view_image_frame"
        layout="@layout/gtapp_image_frame" />
    <!-- 图片区 -->


    <!-- <View style="@style/gtapp_horizon_dividing_line" /> -->

    <include
        android:id="@+id/ll_toolsbar"
        layout="@layout/gtapp_tool_bar"
        android:visibility="gone" />
    <!-- 工具区 -->


    <!-- <View style="@style/gtapp_horizon_dividing_line" /> -->
    <!-- 水平分隔条 -->

    <FrameLayout
        android:id="@+id/fl_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <SeekBar
            android:id="@+id/seekbar_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="100"
            android:maxHeight="56dp"
            android:minHeight="56dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:progressDrawable="@drawable/gtapp_skb_progress_define_color"
            android:thumb="@drawable/gtapp_skb_thumb_state_define"
            android:thumbOffset="-8dp" />

        <!-- 提示滑动动画 -->

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_self_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEEEE" >

        <ImageView
            android:id="@+id/imgv_self_touch_slice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="matrix"
            android:src="@drawable/gtapp_skb_slice_image_state_define"
            android:visibility="visible" />
        <!-- 自定义滑块 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:background="@drawable/gtapp_skb_slice_image_state_define" 
            android:visibility="gone"/>
        <!-- 实验改变背景图 -->


        <ImageView
            android:id="@+id/imgv_skb_anim_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:scaleType="matrix"
            android:src="@drawable/gtapp_skb_drag_normal_finger"
            android:visibility="visible" />
        <!-- 提示滑动动画 -->

        <TextView
            android:id="@+id/tv_slider_tip_msg"
            style="@style/statusTextShadow"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text=">>> 向右拖动完成验证   >>>"
            android:textColor="#A2A497"
            android:textSize="14sp" />
        <!-- 自定义提示文字 -->

    </FrameLayout>

    <!-- <View style="@style/gtapp_horizon_dividing_line" /> -->
    <!-- 水平分隔条 -->

    <include
        android:id="@+id/fl_slider_string_tip"
        layout="@layout/gtapp_slider_string_tip"
        android:visibility="gone" />
    <!-- 霓虹灯效果 -->


    <!-- <View style="@style/gtapp_horizon_dividing_line" /> -->
    <!-- 水平分隔条 -->


    <!-- <RelativeLayout -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" > -->


    <!-- <ImageView -->
    <!-- android:id="@+id/imgv_full_bg_XX" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="24dp" -->
    <!-- android:layout_below="@+id/tv_view" -->
    <!-- android:scaleType="fitXY" -->
    <!-- android:src="@android:drawable/title_bar" /> -->


    <!-- <com.geetest.gtappdemo.view.GtRefreshableView -->
    <!-- android:id="@+id/refreshable_view" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="40dp" -->
    <!-- android:layout_below="@+id/imgv_full_bg_XX" > -->
    <!-- </com.geetest.gtappdemo.view.GtRefreshableView> -->
    <!-- </RelativeLayout> -->

    <com.geetest.gtappdemo.view.GtRefreshableView
        android:id="@+id/refreshable_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.geetest.gtappdemo.view.GtRefreshableView>

    <include
        android:id="@+id/ll_gtapp_tool_interface"
        layout="@layout/gtapp_tool_interface"
        android:visibility="gone" />
    <!-- 一些交互的工具区 -->

</LinearLayout>