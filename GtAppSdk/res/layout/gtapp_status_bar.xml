<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="26dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#FFF9F9F9"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imgv_captcha_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:src="@drawable/gtapp_status_wait" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <!-- 验证状态 -->

        <TextView
            android:id="@+id/tv_validateStatus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="等待验证："
            android:textColor="#F1BD60" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <!-- 验证状态描述 -->

        <TextView
            android:id="@+id/tv_validateMsg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="拖动滑块使悬浮图像正确拼合"
            android:textColor="#B0AFAF" >
        </TextView>
    </LinearLayout>

</LinearLayout>