<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_viewRoot"
    style="@style/cus_dlg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="#104D56" >

    <!-- 采用相对布局来层叠 -->

    <include
        android:id="@+id/ll_before_load"
        layout="@layout/gtapp_wait_for_image"
        android:visibility="visible" />

    <!-- <LinearLayout -->
    <!-- android:id="@+id/ll_before_load" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_margin="0dp" -->
    <!-- android:background="#c0c00e" -->
    <!-- android:orientation="vertical" -->
    <!-- android:visibility="visible" > -->


    <!-- <ImageView -->
    <!-- android:id="@+id/imgv_full_bg" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="160dp" -->
    <!-- android:scaleType="fitXY" -->
    <!-- android:src="@drawable/gtapp_before_load" /> -->
    <!-- </LinearLayout> -->

    <!-- 一个空白的预加载界面 -->

    <LinearLayout
        android:id="@+id/ll_view_after_image_load"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/rl_buttons"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/gtapp_top_bar_repeat_bg"
            android:gravity="center" >

            <include
                android:id="@+id/ll_status_bar"
                android:layout_centerVertical="true"
                layout="@layout/gtapp_status_bar" />
            <!-- 状态区 -->

            <Button
                android:id="@+id/btn_dlg_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@drawable/gtapp_btn_close" />
            <!-- 按钮悬浮在跑马灯上面 -->

        </RelativeLayout>

        <View style="@style/gtapp_horizon_dividing_line" />
        <!-- 在图片预加载时，先不显示 -->

        <include
            android:id="@+id/rl_view_image_frame"
            layout="@layout/gtapp_image_frame" />
        <!-- 图片区 -->

        <View style="@style/gtapp_horizon_dividing_line" />

        <include
            android:id="@+id/ll_toolsbar"
            layout="@layout/gtapp_tool_bar"
            android:visibility="gone" />
        <!-- 工具区 -->

        <View style="@style/gtapp_horizon_dividing_line" />
        <!-- 水平分隔条 -->

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <SeekBar
                android:id="@+id/seekbar_def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:maxHeight="56dp"
                android:minHeight="56dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:progressDrawable="@drawable/gtapp_skb_progress_define_color"
                android:thumb="@drawable/gtapp_skb_thumb_state_define"
                android:thumbOffset="-1dp" />

            <ImageView
                android:id="@+id/imgv_skb_anim_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:src="@drawable/gtapp_skb_drag_normal_finger"
                android:visibility="visible" />
            <!-- 提示滑动动画 -->

            <TextView
                android:id="@+id/tv_slider_tip_msg"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text=">>> 向右拖动完成验证   >>>"
                android:textColor="#A2A497"
                android:textSize="16sp" />
        </FrameLayout>

        <View style="@style/gtapp_horizon_dividing_line" />
        <!-- 水平分隔条 -->

        <include
            android:id="@+id/fl_slider_string_tip"
            layout="@layout/gtapp_slider_string_tip"
            android:visibility="gone" />
        <!-- 霓虹灯效果 -->

        <View style="@style/gtapp_horizon_dividing_line" />
        <!-- 水平分隔条 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#DD001826" >

            <ImageView
                android:id="@+id/imgv_change_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="4dp"
                android:scaleType="center"
                android:src="@drawable/gtapp_downarrow_unactive"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_change_image_tip_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgv_change_image"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="向下拖动刷新图片"
                android:textColor="#22FFFFFF" />

            <Button
                android:id="@+id/btn_about_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/imgv_change_image"
                android:layout_alignRight="@id/imgv_change_image"
                android:background="@drawable/gtapp_version"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
    <!-- 最大外边框 -->


    <!-- 拖动条 -2dp -->

</RelativeLayout>