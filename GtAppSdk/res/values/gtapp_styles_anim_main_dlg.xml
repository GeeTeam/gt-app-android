<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="cus_dlg" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="toast_anim" mce_bogus="1" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/gtapp_anim_dlg_enter</item>
        <item name="android:windowExitAnimation">@anim/gtapp_anim_dlg_exit</item>
    </style>
    <!-- 设置对话框进入和出去的动画 -->

    <style name="gtapp_vertical_dividing_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#E1E1E1</item>
    </style>
    <!-- 垂直分割线 -->

    <style name="gtapp_horizon_dividing_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#A1A1A1</item>
    </style>
    <!-- 水平分割线-灰色 -->
    <style name="gtapp_horizon_dividing_line_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <!-- 水平分割线-白色 -->
    

    <style name="statusTextShadow">
        <item name="android:shadowColor">#ffFFFFFF</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 状态栏文字阴影效果 -->
    
    
    <style name="gtapp_slilder_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">></item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <!-- 文字霓虹灯效果 -->

</resources>